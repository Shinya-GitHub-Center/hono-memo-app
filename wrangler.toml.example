name = "hono-memo-app"
compatibility_date = "2025-08-03"
main = "./src/index.tsx"

[[d1_databases]]
binding = "DB"
database_name = "hono-memo-app-local-db"
database_id = "0000"
migrations_dir = "./src/middleware/db/migrations"

[env.production]
workers_dev = true

[env.production.observability]
enabled = true

[env.production.vars]
# .dev.vars.production（リモート用シークレット設定ファイルのダミー）
# `bun run secret <KEY_NAME>`でマニュアルでサーバーにアップする

[[env.production.d1_databases]]
binding = "DB"
database_name = "hono-memo-app-prod-db"
database_id = "enter_your_db_id"
migrations_dir = "./src/middleware/db/migrations"
